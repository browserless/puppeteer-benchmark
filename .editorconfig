# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
spaces_around_operators = true

[*.{js,ts,json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

[.{js,ts}]
quote_type = single
curly_bracket_next_line = false
